#!/usr/bin/env bash 
# Set the input field sep

IFS=":"     # Setting the Internal Field Separator (IFS) to ':'



while IFS= read -r line; do

	    username=$(echo "$line" | cut -d ":" -f 1)

	        groupid=$(echo "$line" | cut -d ":" -f 4)

		    homedir=$(echo "$line" | cut -d ":" -f 6)

		        shell=$(echo "$line" | cut -d ":" -f 7)

			    userid_info=$(echo "$line" | cut -d ":" -f 5)

			        password=$(echo "$userid_info" | cut -d "$" -f 2)



				    echo "The user $username is part of the $groupid gang, lives in $homedir and rides $shell."

				        echo "User ID's place is protected by the passcode $password, more info about the user here: $userid_info"

					    echo

				    done < /etc/passwd


